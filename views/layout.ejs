<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Tienda CouchDB</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <% if (user) { %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/products">Tienda CouchDB</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/products">Productos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/products/add">Registrar Producto</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sales/new">Registrar Venta</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="reportsDropdown" role="button" data-bs-toggle="dropdown">
                Reportes
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/reports/inventory">Inventario (PDF)</a></li>
                <li><a class="dropdown-item" href="/reports/sales-total.xlsx">Ventas - Total (XLSX)</a></li>
                <li><a class="dropdown-item" href="/reports/stock-total.xlsx">Stock - Total (XLSX)</a></li>
                <li><a class="dropdown-item" href="#" id="customerTotalXlsxLink">Compras por Cliente (XLSX)</a></li>
              </ul>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                <i class="fas fa-user"></i> <%= user.name %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="/logout">Cerrar Sesi√≥n</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  <% } %>

  <div class="container mt-4">
    <% if(success_msg && success_msg.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show">
        <%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <% if(error_msg && error_msg.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show">
        <%= error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <%- body %>
  </div>

  <footer class="bg-light text-center text-muted py-3 mt-5">
    <div class="container">
      <p class="mb-0">Tienda CouchDB &copy; <%= new Date().getFullYear() %></p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const link = document.getElementById('customerTotalXlsxLink');
      if (link) {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          const q = prompt('Ingrese nombre o ID del cliente:');
          if (q && q.trim().length > 0) {
            window.location.href = '/reports/customer-total.xlsx?query=' + encodeURIComponent(q.trim());
          }
        });
      }
    });
  </script>
</body>
</html>