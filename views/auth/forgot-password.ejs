<%- include('../partials/header') %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Recuperar Contraseña</h4>
      </div>
      <div class="card-body">
        <% if(typeof success_msg !== 'undefined' && success_msg !== '') { %>
          <div class="alert alert-success"><%- success_msg %></div>
        <% } %>
        <% if(typeof error_msg !== 'undefined' && error_msg !== '') { %>
          <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>
        <p class="mb-3">Ingresa tu correo electrónico y te enviaremos un enlace para restablecer tu contraseña.</p>
        <form action="/forgot-password" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Correo Electrónico</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Enviar Enlace</button>
          </div>
        </form>
        <div class="mt-3 text-center">
          <p><a href="/login">Volver a Iniciar Sesión</a></p>
        </div>
        
        <!-- Enlace directo de recuperación -->
        <div class="mt-4 p-3 bg-light border rounded">
          <h5 class="mb-3">Enlace directo de recuperación:</h5>
          <a href="http://localhost:3000/reset-password/3497a6df157afa5678a5672de97b49ac8321167d" class="d-block text-break">
            http://localhost:3000/reset-password/3497a6df157afa5678a5672de97b49ac8321167d
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>